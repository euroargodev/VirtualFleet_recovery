{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://raw.githubusercontent.com/euroargodev/VirtualFleet_recovery/json-schema/schemas/VFrecovery-schema-location.json",
  "title": "VirtualFleet-Recovery location",
  "description": "A set of longitude/latitude/time coordinates on Earth",
  "format_version": {
    "const": "0.1"
  },
  "required": ["longitude", "latitude"],
  "type": "object",
  "properties": {
    "longitude": {
      "type": "number",
      "minimum": -180,
      "maximum": 180,
      "description": "Longitude of the geo-location, [-180-180] convention"
    },
    "latitude": {
      "type": "number",
      "minimum": -90,
      "maximum": 90,
      "description": "Latitude of the geo-location"
    },
    "time": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Date and time of the geo-location"
    }
  },
  "maxProperties": 3
}